        </TableLayout>
        <!-- Blank -->

        <!-- Fats Allowance -->
        <TableLayout
            android:id="@+id/tableLayoutFatsAllowance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewFatsAllowance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="@string/fats_allowance"
                    android:textColor="@color/SteelBlue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewFatsAllowanceBlank"
                    android:layout_width="wrap_content"
