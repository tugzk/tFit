        </TableLayout>
        <!-- Blank -->

        <!-- Foods Consumed -->
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/tableRowHomeFoodConsumed"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewAddFood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_add_black_18dp" />

                <TextView
                    android:id="@+id/textViewTitleFoodConsumed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="@string/foods_consumed"
                    android:textColor="@color/SteelBlue"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewHomeCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="10"
                    android:text="@string/calories"
                    android:textSize="18sp" />

            </TableRow>
        </TableLayout>
        <!-- Foods Consumed -->



        <!-- List of Foods -->
        <TableLayout
            android:id="@+id/tableLayoutHomeItems"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </TableLayout>
        <!-- List of Foods -->

    </LinearLayout>
</ScrollView>