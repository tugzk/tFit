<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp">

        <!-- Calories Allowance -->
        <TableLayout
            android:id="@+id/tableLayoutCaloriesAllowance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewCaloriesAllowance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="@string/calories_allowance"
                    android:textColor="@color/SteelBlue"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/textViewCaloriesAllowanceBlank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text=""
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewBlankHome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="           "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewCaloriesAllowanceLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:text="@string/calories_remaining"
                    android:textColor="@color/SteelBlue"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewCaloriesRemainingBlank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
                    android:textSize="14sp" />

            </TableRow>
        </TableLayout>
        <!-- Calories Allowance -->

        <!-- Blank -->
        <TableLayout
            android:id="@+id/tableLayoutBlank1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"/>
        </TableLayout>
        <!-- Blank -->

        <!-- Protein Allowance -->
        <TableLayout
            android:id="@+id/tableLayoutProteinAllowance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewProteinAllowance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="80"
